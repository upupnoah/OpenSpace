{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6", // 或您选择的其他 ECMAScript 版本
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ], // 确保包含此行
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "scripts/**/*" // 确保包括所有您需要编译的 TypeScript 文件
    ],
    "exclude": [
        "node_modules"
    ]
}